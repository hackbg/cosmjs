{
  "name": "@hackbg/cosmjs-esm",
  "type": "module",
  "description": "Cosmos/CosmWasm SDKs as a monolithic ESM package",
  "version": "1.0.0-rc.31",
  "license": "AGPL-3.0",
  "main": "index.ts",
  "contributors": [
    "Adam Avramov <adam@hack.bg>",
    "Confio OÃœ <hello@confio.tech>",
    "IOV SAS <admin@iov.one>",
    "Simon Warta <webmaster128@users.noreply.github.com>",
    "Will Clark <willclarktech@users.noreply.github.com>"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hackbg/cosmjs-esm"
  },
  "files": [
    "build/",
    "*.md",
    "!*.spec.*",
    "!**/testdata/",
    "api",
    "lib",
    "ics23",
    "types"
  ],
  "scripts": {
    "build": "rm -rf ./build && tsc",
    "build-or-skip": "[ -n \"$SKIP_BUILD\" ] || pnpm build",
    "build:workers": "rm -rf ./build && tsc && tsc -p tsconfig.workers.json",
    "check": "tsc --noEmit",
    "coverage": "nyc --reporter=text --reporter=lcov pnpm test --quiet",
    "docs": "typedoc --options typedoc.js",
    "format": "prettier --write --loglevel warn \"./src/**/*.ts\"",
    "format-text": "prettier --write \"./*.md\"",
    "lint": "eslint --max-warnings 0 \"./**/*.ts\" \"./*.js\"",
    "lint-fix": "eslint --fix --max-warnings 0 \"./**/*.ts\" \"./*.js\"",
    "pack-web": "pnpm build-or-skip && webpack --mode development --config webpack.web.config.js",
    "test": "pnpm build-or-skip && pnpm test-node",
    "test-chrome": "pnpm pack-web && karma start --single-run --browsers ChromeHeadless",
    "test-edge": "pnpm pack-web && karma start --single-run --browsers Edge",
    "test-firefox": "pnpm pack-web && karma start --single-run --browsers Firefox",
    "test-node": "ganesha-run jasmine-testrunner.cjs",
    "test-safari": "pnpm pack-web && karma start --single-run --browsers Safari",
    "ubik": "ubik"
  },
  "dependencies": {
    "@hackbg/protobufjs-esm": "6.11.4-patch.1",
    "@noble/hashes": "^1.3.2",
    "@noble/curves": "^1.2.0",
    "@scure/base": "^1.1.3",
    "axios": "^0.21.2",
    "bn.js": "^5.2.0",
    "isomorphic-ws": "^4.0.1",
    "libsodium-wrappers-sumo": "^0.7.11",
    "long": "^4.0.0",
    "pako": "^2.0.2",
    "readonly-date": "^1.0.0",
    "xstream": "^11.14.0"
  },
  "devDependencies": {
    "@hackbg/ubik": "workspace:../../scrt/secretjs-esm/ubik",
    "@hackbg/ganesha": "^4.2.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/bn.js": "^5",
    "@types/eslint-plugin-prettier": "^3",
    "@types/jasmine": "^4",
    "@types/karma-firefox-launcher": "^2",
    "@types/karma-jasmine": "^4",
    "@types/karma-jasmine-html-reporter": "^1",
    "@types/libsodium-wrappers-sumo": "^0.7.5",
    "@types/long": "^4.0.1",
    "@types/node": "^18.11.9",
    "@types/pako": "^1.0.1",
    "@types/ws": "^6.0.1",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "buffer": "^6.0.3",
    "eslint": "^7.5",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "esm": "^3.2.25",
    "glob": "^7.1.6",
    "jasmine": "^4",
    "jasmine-spec-reporter": "^6",
    "karma": "^6.3.14",
    "karma-chrome-launcher": "^3.1.0",
    "karma-firefox-launcher": "^2.1.0",
    "karma-jasmine": "^5",
    "karma-jasmine-html-reporter": "^1.5.4",
    "nyc": "^15.1.0",
    "prettier": "^2.8.1",
    "readonly-date": "^1.0.0",
    "ses": "^0.11.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^8",
    "typedoc": "^0.24.8",
    "typescript": "~5.1",
    "webpack": "^5.76.0",
    "webpack-cli": "^4.6.0"
  }
}
